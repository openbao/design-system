{
  "buildCommand": "yarn workspace @hashicorp/ember-flight-icons build && yarn workspace @hashicorp/design-system-components build && yarn workspace website build && yarn workspace website algolia:index",
  "devCommand": "yarn workspace website ember serve",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "all"
        }
      ]
    },
    {
      "source": "/testing(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "none"
        }
      ]
    }
  ],
  "framework": "ember",
  "rewrites": [{ "source": "/(.*)", "destination": "/_empty.html" }],
  "redirects": [
    { "source": "/support", "destination": "/about/support", "permanent": false }
  ]
}
